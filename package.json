{
  "name": "chadgpt",
  "displayName": "ChadGPT",
  "description": "File aware ChatGPT integration",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.77.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "icon": "icon.png",
  "repository": {
    "url": "https://github.com/savager/ChadGPT"
  },
  "contributes": {
    "configuration": [
      {
        "title": "Chad GPT",
        "properties": {
          "chadgpt.apiKey": {
            "type": "string",
            "default": "",
            "description": "OpenAI API Key"
          },
          "chadgpt.model": {
            "type": "string",
            "default": "",
            "description": "OpenAI AI Model"
          }
        }
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "chadgpt.customSection",
          "name": "Chad GPT"
        }
      ]
    },
    "commands": [
      {
        "command": "chadgpt.setAIModel",
        "title": "Set OpenAI AI Model (default is 'gpt-3.5-turbo')"
      },
      {
        "command": "chadgpt.setApiKey",
        "title": "Set OpenAI API Key"
      },
      {
        "command": "chadgpt.askChatGPT",
        "title": "Ask ChatGPT"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.77.0",
    "@typescript-eslint/eslint-plugin": "^5.56.0",
    "@typescript-eslint/parser": "^5.56.0",
    "@vscode/test-electron": "^2.3.0",
    "eslint": "^8.36.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "ts-loader": "^9.4.2",
    "typescript": "^4.9.5",
    "webpack": "^5.76.3",
    "webpack-cli": "^5.0.1"
  },
  "dependencies": {
    "openai": "^3.2.1"
  }
}
